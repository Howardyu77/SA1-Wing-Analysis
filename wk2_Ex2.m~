clear;
close all;

%define Reynolds number, create vectors
ReL=2e6;
x = linspace(0,1,101);
n=length(x);
%linearly varying ue/U
ue=linspace(1,0.9,101);
%find the pressure gradient 
fx = gradient(ue,x);
fx(1);
TS=zeros(n,1);

for i=1:1:n
    thetaonlsq=(0.45/ReL)*(ue(1,i))^(-6)*ueintbit(x(1,1),ue(1,1),x(1,i),ue(1,i));
    TS(i,1)=sqrt(thetaonlsq);
end

plot(x,TS);
hold on
BS=0.664/sqrt(ReL);
plot(x,BS.*sqrt(x));
xlabel('x/L')
ylabel('\theta/L')
legend('Thwaitesâ€™ solution','Blasius solution')

%test for trainsition
Rethet=ReL*ue*

%if log(Rethet) >= 18.4*He - 21.74 laminar = false;
%disp([x(i) Rethet/1000])
%end